<div class="show">
<h2><%= recipe.name %> </h2>
<h3><%= recipe.style %> </h3>

<a href="/profile/recipes/edit/<%= recipe.id %>" class="button button-small" id="edit-recipe">EDIT RECIPE</a>
<a href="/profile/recipes/<%= recipe.id %>" class="button button-small" id="delete-recipe">DELETE RECIPE</a>

<div class="show-meta">
<h4>Meta data</h4>
<p>Batch Size: <%= recipe.batchSize %> <br>
ABV: <%= recipe.abv %> <br>
IBU: <%= recipe.ibu %> <br>
SRM: <%= recipe.srm %> <br>
EBC: <%= recipe.ebc %> <br>
Target Starting Gravity: <%= recipe.targetOg %> <br>
Target Final Gravity: <%= recipe.targetFg %> <br>
Mash Temperature: <%= recipe.mashTemp %> <br>
Fermentation Temperature: <%= recipe.fermTemp %></p> 
</div>

<br><br>

<h4 class="ingredient-header">Ingredients</h4>
  <div class="ingredient-section">
  <% const parsedIngredients = JSON.parse(recipe.ingredients) %> 
      <h5>Malts</h5>
      <% parsedIngredients.malt.forEach( m => { %>
        <div>
          <p>Malt: <%= m.name %> <%= m.amount.value %> <%= m.amount.unit %>  </p>
        </div>
      <% }) %> 
      <h5>Hops</h5>
      <% parsedIngredients.hops.forEach( h => { %>
        <div>
          <p>Hop: <%= h.name %> <%= h.amount.value %> <%= h.amount.unit %> Include at: <%= h.add %>  </p>
        </div>
      <% }) %> 
      <% if (parsedIngredients.adjuncts) { %> 
        <h5>Adjuncts</h5>
        <% parsedIngredients.adjuncts.forEach( a => { %>
          <div>
            <p>Adjunct: <%= a.adjunctName %> <%= a.adjunctQty %> oz </p>
          </div>
        <% }) %> 
      <% } %>
      <h5>Yeast</h5>
      <div>
        <p>Yeast: <%= parsedIngredients.yeast %></p>
      </div>
    </div>
  </div>
</div>

<script src="./js/delete.js"></script>